<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crimson"
    android:layout_gravity="fill_horizontal">

    <ImageView
        android:id="@+id/home"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="@+id/page_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="#FFF"
        android:layout_marginLeft="6dp"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Course Reports" />

    <ImageButton
        android:id="@+id/qr_code_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/qr_code_scanner_48px"
        android:contentDescription="@string/qr_code_description"
        app:layout_constraintBottom_toBottomOf="@+id/page_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>